    "import nltk\n",
    "import os\n",
    "\n",
    "# 원하는 경로를 설정합니다.\n",
    "download_dir = '/data/nltk_data'\n",
    "if not os.path.exists(download_dir):\n",
    "    os.makedirs(download_dir)\n",
    "\n",
    "# 다운로드 경로를 NLTK 데이터 경로에 추가\n",
    "nltk.data.path.append(download_dir)\n",
    "\n",
    "# 'punkt' 데이터 다운로드\n",
    "nltk.download('punkt', download_dir=download_dir)"
   ]
